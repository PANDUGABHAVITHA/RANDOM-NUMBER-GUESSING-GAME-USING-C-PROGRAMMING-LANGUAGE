//GUESSNG GAME (USING C++)

#include <iostream>
#include <cstdlib>
#include <string>

using namespace std;

int main()
{
   int random,guess,i,flag=1,count=5;
   string name;
   cout<<"Please enter you name"<<endl;
   cin>>name;
   cout<<"WELCOME!!!"<< name<<endl;
   cout<<endl<<"HOPE YOU WILL BE HAVING FUN"<<endl<<endl;
   cout<<"Computer generating a random number between 0 and 100 "<<endl;
   random=rand()%100+1;
   cout<<"Now the game starts!"<<endl<<"You have 5 chances to guess the number"<<endl<<endl<<"GOOD LUCK!!!"<<endl;
   for(i=0;i<5;i++)
   {
       cout << "Guess the number between 0 and 100"<<endl;
       cin >> guess;
       if(count>0)
       {
           if(random==guess)
           {
           flag=0;
           break;
           }
           else if(guess<random)
           {
               flag=1;
               cout<<"Your guess is lower than the computer generated number "<<endl;
               --count;
               cout<<"You have more "<<count<<" chances left to win the game"<<count<<endl;
              
           }
           else
           {
               flag=1;
               cout<<"Your guess is higher than the computer generated number"<<endl;
               --count;
               cout<<"You have more "<<count<<" chances left to win the game"<<endl;
               
           }
       }
       
   }
   if(random==guess)
   {
       cout<<"CONGRATULATIONS!!! You guessed the number "<<random<<endl;
   }
   else
   {
       cout<<"YOU LOST THE GAME!!! Please try again"<<endl;
       cout<<"The random number generated by the computer is "<<random<<endl;
   }
   return 0;
}
